<?xml version="1.0"?>
<launch>

  <!--  Calibration -->
  <arg name="dictionary" default="TAG36h11"/>
  <arg name="marker_size" default="173"/>
  <arg name="gui" default="1"/>
  <arg name="show_threshold" default="0"/>

  <include file="$(find aruco3)/launch/jai_m.launch">
    <arg name="CAM" value="1"/>
    <arg name="marker_size" value="$(arg marker_size)"/>
    <arg name="dictionary" value="$(arg dictionary)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="show_threshold" value="$(arg show_threshold)"/>
  </include>

  <include file="$(find aruco3)/launch/jai_m.launch">
    <arg name="CAM" value="2"/>
    <arg name="marker_size" value="$(arg marker_size)"/>
    <arg name="dictionary" value="$(arg dictionary)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="show_threshold" value="$(arg show_threshold)"/>
  </include>

  <include file="$(find aruco3)/launch/jai_m.launch">
    <arg name="CAM" value="3"/>
    <arg name="marker_size" value="$(arg marker_size)"/>
    <arg name="dictionary" value="$(arg dictionary)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="show_threshold" value="$(arg show_threshold)"/>
  </include>

  <include file="$(find aruco3)/launch/jai_m.launch">
    <arg name="CAM" value="4"/>
    <arg name="marker_size" value="$(arg marker_size)"/>
    <arg name="dictionary" value="$(arg dictionary)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="show_threshold" value="$(arg show_threshold)"/>
  </include>

</launch>
